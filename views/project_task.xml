
<odoo>
  <record id="view_project_task_form_inherit_required_equipment_tab" model="ir.ui.view">
    <field name="name">project.task.form.inherit.required.equipment.tab</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='extra_info']" position="after">
        <page string="Required Equipment" invisible="not is_fsm">
          <group>
            <field name="required_equipment_ids" mode="list" nolabel="1">
                <list editable="bottom">
                    <field name="equipment_id"/>
                </list>
            </field>   
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
